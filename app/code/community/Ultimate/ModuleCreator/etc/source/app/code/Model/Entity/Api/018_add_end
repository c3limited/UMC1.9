            ${{entity}} = Mage::getModel('{{namespace}}_{{module}}/{{entity}}')
                ->setData((array)$data)
                ->save();
        }
        catch (Mage_Core_Exception $e) {
            $this->_fault('data_invalid', $e->getMessage());
        }
        catch (Exception $e) {
            $this->_fault('data_invalid', $e->getMessage());
        }
        return ${{entity}}->getId();
    }

